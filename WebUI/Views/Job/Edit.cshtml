@model WebUI.Models.Job

@{
    ViewBag.Title = "Edit/Update Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="card-header">@ViewBag.Title</h4>
<br />
@using (Html.BeginForm("Edit", "Job", FormMethod.Post, null))
{
    @Html.HiddenFor(m => m.Id)

    <input id="hddMessageAction" type="hidden" value="@ViewBag.messageAction" />

    <div class="row">
        <div class="form-group col-3">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control col", @maxlength = "50" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-3">
            @Html.LabelFor(m => m.CategoryId)
            @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.listCategory, "Id", "Name"), new { @class = "form-control col" })
        </div>
        <div class="form-group col-3">
            @Html.LabelFor(m => m.PublisherId)
            @Html.DropDownListFor(m => m.PublisherId, new SelectList(ViewBag.listPublisher, "Id", "Name"), new { @class = "form-control col" })
        </div>
    </div>
    @Html.ValidationMessage("summaryErrors", new { @class = "text-danger" })
    <div class="row form-group">
        <button type="submit" class="btn btn-success">Update</button>
        <a class="btn btn-danger" href="@Url.Action("Index", "Job")">Back</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}